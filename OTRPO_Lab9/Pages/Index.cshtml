@page
@model IndexModel
@{
    ViewData["Title"] = "Chat Room";
}

<div id="login-screen">
    <h2>Введите ваше имя</h2>
    <input type="text" id="username-input" placeholder="Имя пользователя">
    <button id="join-button">Войти в чат</button>
</div>

<div id="chat-screen" style="display: none;">
    <h1>Chat Room</h1>
    <div id="online-users">
        <h2>Пользователи Онлайн</h2>
        <ul id="users-list"></ul>
    </div>
    <div id="chat-box">
        <h2 id="room-title">Общая комната</h2>
        <div id="messages"></div>
        <input type="text" id="message-input" placeholder="Напишите сообщение...">
        <button id="send-button">Отправить</button>
    </div>

    <div>
        <input type="text" id="private-room-user" placeholder="Введите имя участника" />
        <button id="create-room-button">Создать личную комнату</button>
    </div>

    <div>
        <input type="text" id="join-room-id" placeholder="Введите ID комнаты" />
        <button onclick="joinPrivateRoom()">Присоединиться к комнате</button>
    </div>
</div>




